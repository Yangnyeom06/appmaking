WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:

<MainWindow>:
    name: "main"

    startStation: _startStation
    startStationInput: _startStationInput
    arriveStation: _arriveStation
    arriveStationInput: _arriveStationInput
    auto_word_output: _auto_word_output

    FloatLayout:

        Label:
            id: _auto_word_output
            valign: 'bottom'
            halign: 'left'
            text: ''
            font_size: 15
            size_hint: None, None
            size: 150, 300
            pos: 420, 250
            font_name: 'nanummyeongjoEB'

        Label:
            id: _startStation
            text: '출발역'
            font_size: 15
            size_hint: None, None
            size: 150, 100
            pos: 0, 250
            font_name: 'nanummyeongjoEB'

        TextInput:
            id: _startStationInput
            mulitiline: False
            font_size: 30
            size_hint: None, None
            size: 250, 100
            pos: 150, 250
            font_name: 'nanummyeongjoEB'
            on_text: root.auto_word_complete()
            on_focus:
                if self.focus: print("focusing in..."), root.auto_word_complete()
                else: print("defocusing"), root.un_auto_word_complete()

        Label:
            id: _arriveStation
            text: '도착역'
            font_size: 15
            size_hint: None, None
            size: 150, 100
            pos: 0, 150
            font_name: 'nanummyeongjoEB'

        TextInput:
            id: _arriveStationInput
            password: False
            font_size: 30
            size_hint: None, None
            size: 250, 100
            pos: 150, 150
            font_name: 'nanummyeongjoEB'

        Button:
            text: 'Submit'
            font_size: 30
            size_hint: None, None
            size: 250, 100
            pos: 400, 0
            font_name: 'nanummyeongjoEB'
            on_release:
                app.root.current = "third"
                root.solo_submit()
                root.manager.transition.direction = "left"

        Image:
            source: 'img_subway.png'
            size_hint: None, None
            size: 550, 550
            pos: 100, 400

        Button:
            text: "Go for two"
            font_size: 30
            size_hint: None, None
            size: 250, 100
            pos: 150, 0
            font_name: 'nanummyeongjoEB'
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "left"


